# SmoothSend Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Aptos Network Configuration
APTOS_NETWORK=testnet
APTOS_RPC_URL=https://api.testnet.aptoslabs.com/v1

# Authentication & Security
RELAYER_PRIVATE_KEY=your_relayer_private_key_here
TREASURY_ADDRESS=your_treasury_address_here

# Contract Addresses (use standardized naming)
USDC_CONTRACT_ADDRESS=0x3c27315fb69ba6e4b960f1507d1cefcc9a4247869f26a8d59d6b7869d23782c::test_coins::USDC
SMOOTHSEND_CONTRACT_ADDRESS=your_smoothsend_contract_address_here
RELAYER_ADDRESS=your_relayer_address_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Settings
PORT=3000
NODE_ENV=development

# CORS & Security
ALLOWED_ORIGINS=http://localhost:3001,https://your-frontend-domain.vercel.app
CORS_CREDENTIALS=false
MAX_REQUEST_SIZE=1mb
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Database Configuration (optional - core functionality works without it)
# DATABASE_URL=postgresql://user:password@localhost:5432/smoothsend
# DATABASE_URL=sqlite:./smoothsend.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# External Services
PYTH_HERMES_URL=https://hermes.pyth.network

# =============================================================================
# FINANCIAL & RATE LIMITING
# =============================================================================

# Financial Configuration
FEE_MARKUP_PERCENTAGE=10
MIN_APT_BALANCE=1000000000
MAX_TRANSACTION_AMOUNT=1000000000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Performance & Caching
PRICE_CACHE_TTL=30
GAS_ESTIMATE_BUFFER=20

# =============================================================================
# DEPLOYMENT SPECIFIC (Azure compatibility)
# =============================================================================

# Gas Configuration (optional)
# MAX_GAS_UNITS=100000
# GAS_UNIT_PRICE=100
# RELAYER_FEE_PERCENTAGE=0.5

# Logging
LOG_LEVEL=info

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment, override these values:
# - APTOS_NETWORK=mainnet
# - APTOS_RPC_URL=https://api.mainnet.aptoslabs.com/v1
# - NODE_ENV=production
# - Update contract addresses to mainnet versions
# - Use production database and Redis URLs
# - Set appropriate ALLOWED_ORIGINS for your frontend domain
